{
  "extends": [ "config:recommended" ],
  "baseBranches": [ "master" ],
  "platform": "github",
  "branchPrefix": "renovate/",
  "forkProcessing": "enabled",
  "repositories": [
    "gravity182/homeserver"
  ],
  "prConcurrentLimit": 1,
  "helm-values": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Docker image updates",
      "matchDatasources": "docker",
      "matchManagers": [ "helm-values" ],
      "major": { "automerge": false },
      "minor": { "automerge": false },
      "patch": { "automerge": true, "labels": [ "renovate", "patch-update" ] },
      "commitMessageSuffix": "{{#if major}} ‚ö†Ô∏è{{else if minor}} ‚ú®{{else}} ü©π{{/if}}",
      "prHeader": "This PR updates an image for the `{{chartName}}` Helm chart.",
      "prFooter": "If you find this update useful, please consider [sponsoring Renovate](https://renovatebot.com/donate)."
    }
  ]
}
