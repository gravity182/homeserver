              name: qbittorrent
              ports:
                - containerPort: 8080
                  name: http
                  protocol: TCP
              resources: null
              securityContext:
                readOnlyRootFilesystem: false
                runAsNonRoot: false
                seLinuxOptions: {}
                seccompProfile:
                  type: RuntimeDefault
              volumeMounts:
                - mountPath: /tmp
                  name: empty-dir
                  subPath: tmp-dir
