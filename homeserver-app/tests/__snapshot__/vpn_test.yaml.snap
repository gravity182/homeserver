                value: "1"
          tolerations: null
          volumes:
            - emptyDir: {}
              name: empty-dir
            - name: wireguard-conf
              secret:
                defaultMode: 384
                optional: false
                secretName: vpn-config
            - hostPath:
                path: /lib/modules
                type: Directory
              name: lib-modules
