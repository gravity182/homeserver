                - containerPort: 8080
                  name: http
                  protocol: TCP
              resources: null
              securityContext:
                readOnlyRootFilesystem: false
                runAsNonRoot: false
                seLinuxOptions: {}
                seccompProfile:
                  type: RuntimeDefault
              volumeMounts:
                - mountPath: /tmp
                  name: empty-dir
                  subPath: tmp-dir
                - mountPath: /log
                  name: empty-dir
                  subPath: log-dir
                - mountPath: /data
                  name: data
          enableServiceLinks: false
          initContainers:
            - command:
                - /bin/bash
                - -ec
                - |
                  IFS=" "
                  echo "Current permissions:" \
                    && ls -land $PATHS \
                    && echo "------------------------------" \
                    && echo "Changing volume permissions..." \
                    && chown -R $CHOWN_UID:$CHOWN_GID $PATHS \
                    && chmod -R a=,ug+rX,u+w $PATHS \
                    && echo "------------------------------" \
                    && echo "Updated permissions:" \
                    && ls -land $PATHS
              env:
                - name: PATHS
                  value: /mnt/data
                - name: CHOWN_UID
                  value: "1000"
                - name: CHOWN_GID
                  value: "1000"
              image: chainguard/bash:latest
              imagePullPolicy: IfNotPresent
              name: volume-permissions
              securityContext:
                capabilities:
                  add:
                    - CHOWN
                  drop:
                    - ALL
                readOnlyRootFilesystem: false
                runAsNonRoot: false
                runAsUser: 0
                seccompProfile:
                  type: RuntimeDefault
              volumeMounts:
                - mountPath: /mnt/data
